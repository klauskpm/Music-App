<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem">

    <ImageView
        android:id="@+id/list_item_image__image_view"
        style="@style/ListItemImage" />

    <RelativeLayout
        style="@style/ListItemContent">

        <TextView
            android:id="@+id/list_item_title__text_view"
            style="@style/ListItemText.Title" />

        <TextView
            android:id="@+id/list_item_subtitle__text_view"
            style="@style/ListItemText.Subtitle" />

    </RelativeLayout>


</LinearLayout>